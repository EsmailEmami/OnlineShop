{
  "IdentityOptions": {
    "DefaultScheme": "Bearer",
    "DefaultAuthenticateScheme": "Bearer",
    "DefaultChallengeScheme": "Bearer",
    "RequireHttpsMetadata": false,
    "Authority": "http://localhost:8011",
    "Audience": "user_api_resource",
    "SaveToken": true,
    "TokenParameters": {
      "ValidateIssuer": false,
      "ValidateAudience": false,
      "RequireExpirationTime": false,
      "ValidateLifetime": true,
      "ClockSkew": "0:0:0:0"
    },
    "Policies": [
      {
        "Name": "PublicSecure",
        "ClaimType": "client_id",
        "Values": [
          "user_api_client"
        ]
      }
    ]
  },
  "ConnectionStrings": {
    "SqlConnectionString": "Server=.\\MSSQL2019;Database=OnlineShop;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
